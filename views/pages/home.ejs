<body>

  <header>
    <%- include('../partials/navbar') %>
  </header>
  <!-- Slider -->
<div class="slider-container">
  <div class="slider">
        <img src="/images/hotelview1.jpg" class="slide" />
    <img src="/images/hotelview2.jpg" class="slide" />
    <img src="/images/hotelview3.jpg" class="slide" />
    <img src="/images/hotelview4.jpg" class="slide" />
    <img src="/images/hotelviewinside1.jpg" class="slide" />
    <img src="/images/hotelviewinside2.jpg" class="slide" />
    <img src="/images/hotelviewinside3.jpg" class="slide" />
    <img src="/images/hotelviewinside4.jpg" class="slide" />
    <img src="/images/hotelviewswimmingpool.jpg" class="slide" />
    <img src="/images/hotelviewgallery.jpg" class="slide" />
    <img src="/images/hotelviewdinnerTable.jpg" class="slide" />
    <img src="/images/hotelviewbedsheets.jpg" class="slide" />
    <img src="/images/hotelview1.jpg" class="slide" />
    <img src="/images/hotelviewbar.jpg" class="slide" />
    <img src="/images/hotelsideview.jpg" class="slide" />
     
  </div>
</div>
<!-- Availability Form -->
<div class="availability-form">
  <form>
    <label>
      Check-in:<input type="date" name="checkin">
      Check-out:<input type="date" name="checkout">
      Adults:<input type="number" name="adults" min="1">
      Children:<input type="number" name="children" min="0">
      <button type="submit">Check Availability</button>
    </label>
  </form>
</div>

<!-- =================== Our Rooms Section =================== -->
<div class="container rooms-section">
  <h2 class="section-title">Our Rooms</h2>

  <div class="room-cards">
    <!-- Room Card 1 -->
    <div class="room-card">
      <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80" alt="Single Room">

      <div class="room-details">
        <h3>Deluxe Room</h3>
        <p class="price">₹2,500 / night</p>
        <ul class="features">
          <li>Double Bed</li>
          <li>Attached Bathroom</li>
          <li>In-room Bakery</li>
          <li>Comfort Sofa</li>
        </ul>
        <p class="facilities">WiFi, TV, AC, Room Service</p>
        <div class="rating">★★★★☆</div>
        <div class="room-actions">
          <button class="btn-book">Book Now</button>
          <button class="btn-details">More Details</button>
        </div>
      </div>
    </div>

    <!-- Room Card 2 -->
    <div class="room-card">
      <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80" alt="Single Room">
      <div class="room-details">
        <h3>Single Room</h3>
        <p class="price">₹1,500 / night</p>
        <ul class="features">
          <li>Single Bed</li>
          <li>Attached Bathroom</li>
          <li>Bakery Access</li>
          <li>Compact Sofa</li>
        </ul>
        <p class="facilities">WiFi, TV, Heater, Room Service</p>
        <div class="rating">★★★☆☆</div>
        <div class="room-actions">
          <button class="btn-book">Book Now</button>
          <button class="btn-details">More Details</button>
        </div>
      </div>
    </div>

    <!-- Room Card 3 -->
    <div class="room-card">
      <img src="https://images.unsplash.com/photo-1600585154340-be6161a56a0c?auto=format&fit=crop&w=800&q=80" alt="Single Room">
      <div class="room-details">
        <h3>Premium Suite</h3>
        <p class="price">₹4,200 / night</p>
        <ul class="features">
          <li>Double Bed</li>
          <li>Luxury Bathroom</li>
          <li>Mini Bakery</li>
          <li>Sofa Lounge</li>
        </ul>
        <p class="facilities">WiFi, Smart TV, AC, Butler Service</p>
        <div class="rating">★★★★★</div>
        <div class="room-actions">
          <button class="btn-book">Book Now</button>
          <button class="btn-details">More Details</button>
        </div>
      </div>
    </div>
  </div>

  <!-- More Rooms Button -->
  <div class="more-rooms-btn">
    <button class="btn-more-rooms">More Rooms</button>
  </div>
</div>

<!-- =================== Our Facilities Section =================== -->
<div class="container facilities-section">
  <h2 class="section-title">Our Facilities</h2>

  <div class="facility-grid">
    <!-- Facility Item -->
    <div class="facility-item">
      <img src="https://cdn-icons-png.flaticon.com/512/481/481113.png" alt="WiFi">
      <p>Free WiFi</p>
    </div>

    <div class="facility-item">
      <img src="https://cdn-icons-png.flaticon.com/512/2972/2972185.png" alt="Pool">
      <p>Swimming Pool</p>
    </div>

    <div class="facility-item">
      <img src="https://cdn-icons-png.flaticon.com/512/3176/3176290.png" alt="Restaurant">
      <p>Restaurant</p>
    </div>

    <div class="facility-item">
      <img src="https://cdn-icons-png.flaticon.com/512/888/888857.png" alt="Gym">
      <p>Fitness Gym</p>
    </div>

    <div class="facility-item">
      <img src="https://cdn-icons-png.flaticon.com/512/684/684908.png" alt="Parking">
      <p>Free Parking</p>
    </div>

    <div class="facility-item">
      <img src="https://cdn-icons-png.flaticon.com/512/174/174046.png" alt="TV">
      <p>Smart TV</p>
    </div>
  </div>
</div>

